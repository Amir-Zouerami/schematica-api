NODE_ENV=development
PORT=3000

# ------ APP ------

APP_TITLE=Schematica
APP_DESCRIPTION=A Collaborative API Documentation Platform
APP_VERSION=2.0
APP_TAG=Schematica
APP_SERVER_URL=http://localhost:3000
APP_GLOBAL_PREFIX=api
APP_DOCS_PATH=docs

LOCK_DURATION_MS=180000
LOCK_CLEANUP_INTERVAL_MS=60000


