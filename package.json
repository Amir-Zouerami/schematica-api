{
	"name": "schematica-api",
	"version": "2.0.1",
	"description": "A Collaborative API Documentation Platform",
	"author": "Amir Zouerami",
	"private": true,
	"license": "GPL-3.0-only",
	"keywords": [
		"Schematica",
		"Swagger",
		"API Documentation"
	],
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"migrate:dev": "dotenv -e .env -- prisma migrate dev",
		"migrate:reset": "dotenv -e .env -- prisma migrate reset"
	},
	"dependencies": {
		"@apidevtools/swagger-parser": "^12.1.0",
		"@faker-js/faker": "~9.0.0",
		"@fastify/cookie": "^11.0.2",
		"@fastify/multipart": "^9.3.0",
		"@fastify/passport": "^3.0.2",
		"@fastify/secure-session": "^8.2.0",
		"@fastify/static": "^8.3.0",
		"@nestjs/common": "^11.1.8",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.8",
		"@nestjs/event-emitter": "^3.0.1",
		"@nestjs/jwt": "^11.0.1",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-fastify": "^11.1.8",
		"@nestjs/platform-socket.io": "^11.1.8",
		"@nestjs/schedule": "^6.0.1",
		"@nestjs/swagger": "^11.2.1",
		"@nestjs/websockets": "^11.1.8",
		"@prisma/client": "^6.19.0",
		"@stoplight/spectral-core": "^1.20.0",
		"@stoplight/spectral-parsers": "^1.0.5",
		"@stoplight/spectral-ruleset-bundler": "^1.6.3",
		"@stoplight/spectral-rulesets": "^1.22.0",
		"bcrypt": "^6.0.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"fastify": "5.6.1",
		"json-schema-faker": "^0.5.9",
		"nestjs-pino": "^4.4.1",
		"openapi-types": "^12.1.3",
		"passport": "^0.7.0",
		"passport-gitlab-ts": "^1.0.2",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"path-to-regexp": "^8.3.0",
		"pino-http": "^11.0.0",
		"pino-pretty": "^13.1.2",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"socket.io": "^4.8.1"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.39.1",
		"@nestjs/cli": "^11.0.10",
		"@nestjs/schematics": "^11.0.9",
		"@nestjs/testing": "^11.1.8",
		"@stoplight/types": "^14.1.1",
		"@types/bcrypt": "^6.0.0",
		"@types/jest": "^30.0.0",
		"@types/json-schema-faker": "^0.5.6",
		"@types/node": "22.18.13",
		"@types/passport": "^1.0.17",
		"@types/passport-jwt": "^4.0.1",
		"@types/passport-local": "^1.0.38",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.46.3",
		"@typescript-eslint/parser": "^8.46.3",
		"dotenv-cli": "^10.0.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"globals": "^16.5.0",
		"jest": "^30.2.0",
		"prettier": "^3.6.2",
		"prisma": "^6.19.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.5",
		"ts-loader": "^9.5.4",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testEnvironment": "node",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"/node_modules/(?!(@faker-js/faker|@apidevtools/swagger-parser|json-schema-faker|path-to-regexp)/)"
		],
		"collectCoverageFrom": [
			"src/**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"moduleNameMapper": {
			"^src/(.*)$": "<rootDir>/src/$1"
		}
	},
	"trustedDependencies": [
		"@nestjs/core",
		"@prisma/client",
		"@prisma/engines",
		"prisma",
		"unrs-resolver"
	]
}
